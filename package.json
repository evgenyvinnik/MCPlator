{
  "name": "calculator-casio-llm",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter 'mc-plator' dev",
    "build": "bun run --filter '*' build",
    "build:packages": "bun run --filter '@calculator/shared-types' build && bun run --filter '@calculator/calculator-engine' build",
    "build:apps": "bun run --filter 'mc-plator' build",
    "test": "bun run --filter '*' test",
    "sloc": "node scripts/calc-sloc.mjs",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "bun run --filter 'mc-plator' lint",
    "lint:fix": "bun run --filter 'mc-plator' lint:fix"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0"
  }
}
