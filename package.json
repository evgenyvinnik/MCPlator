{
  "name": "calculator-casio-llm",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/frontend",
    "dev:backend": "npm run dev -w apps/backend",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "npm run build --workspaces",
    "build:packages": "npm run build -w packages/shared-types && npm run build -w packages/calculator-engine",
    "build:apps": "npm run build -w apps/frontend",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
