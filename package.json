{
  "name": "calculator-casio-llm",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter apps/frontend dev",
    "dev:backend": "bun run --filter apps/backend dev",
    "dev:all": "concurrently \"bun run dev\" \"bun run dev:backend\"",
    "build": "bun run --filter '*' build",
    "build:packages": "bun run --filter packages/shared-types build && bun run --filter packages/calculator-engine build",
    "build:apps": "bun run --filter apps/frontend build",
    "test": "bun run --filter '*' test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "typescript": "^5.0.0"
  }
}
