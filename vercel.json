{
  "buildCommand": "cd apps/frontend && npm install && npm run build",
  "outputDirectory": "apps/frontend/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/((?!api).*)", 
      "destination": "/index.html" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/backend/api/$1"
    }
  ]
}
